@model BillingApp.Models.PhoneProgram

@{
    ViewData["Title"] = "Edit Program";
}

<div class="container my-4">
    <!-- Edit Program Card -->
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white text-center">
            <h4>@ViewData["Title"]</h4>
        </div>
        <div class="card-body">
            <form asp-action="EditProgram" asp-controller="Registration" method="post">
                <input type="hidden" asp-for="ProgramName" /> <!-- Hidden field to track program -->

                <div class="form-group">
                    <label for="ProgramName">Program Name</label>
                    <input asp-for="ProgramName" class="form-control" readonly /> <!-- Readonly to prevent name change -->
                </div>

                <div class="form-group">
                    <label for="Benfits">Benefits</label>
                    <textarea asp-for="Benfits" class="form-control" required></textarea>
                </div>

                <div class="form-group">
                    <label for="Charge">Charge (€)</label>
                    <input asp-for="Charge" class="form-control" type="number" step="0.01" required />
                </div>

                <button type="submit" class="btn btn-success">Save Changes</button>
            </form>
        </div>
    </div>

    <!-- Cancel Button -->
    <div class="text-center my-3">
        <a asp-action="EditProgramList" asp-controller="Registration" class="btn btn-secondary">
            Cancel
        </a>
    </div>
</div>
