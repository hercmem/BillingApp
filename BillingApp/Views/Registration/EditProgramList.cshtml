@model IEnumerable<BillingApp.Models.PhoneProgram>

@{
    ViewData["Title"] = "Edit Program List";
}

<div class="container my-4">
    <!-- Edit Program List Card -->
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white text-center">
            <h4>@ViewData["Title"]</h4>
        </div>
        <div class="card-body">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Program Name</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var program in Model)
                    {
                        <tr>
                            <td>@program.ProgramName</td>
                            <td>
                                <a asp-action="EditProgram" asp-controller="Registration" asp-route-id="@program.ProgramName" class="btn btn-primary">Edit</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Back Button -->
    <div class="text-center my-3">
        <a asp-action="AdminDashboard" asp-controller="Admins" class="btn btn-secondary">
            Back
        </a>
    </div>
</div>
